<script>
    function InCorrectInformationHandler() {
        $("#mail-error-message").removeClass("d-none");
        $("#password-error-message").removeClass("d-none");
        $("#mail-input").addClass("is-invalid");
        $("#password-input").addClass("is-invalid");
    }
    function Login() {
        
        
        var mail = $("#mail-input").val();
        var password = $("#password-input").val();
        var parameters = {
            url: "/Login/LoginCheck",
            data: {
                mail,
                password
            }
        };
        var result = serviceWorker.Actions.Post(parameters);
        console.log(result);

        if (result.status == 1) {
            window.location.href = "/Home/Index";
        }
        else {
            InCorrectInformationHandler();
        }
    }
</script>