@model List<Blogs>
@{
    ViewData["Title"] = "List";
}


<div class="card">
    <div class="card-header">
        <div class="card-title">
            <h4>Blog Listesi</h4>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.DisplayedDate</td>
                            <td>
                                <a href="/blog/detail/@item.Id" class="btn btn-sm btn-outline-success cursor-pointer">Detay</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">Kayıt Bulunamadı</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>